{
  "name": "express-api-boilerplate",
  "version": "1.0.0",
  "description": "Node + Express API boilerplate",
  "repository": "https://github.com/nath-green/express-api-boilerplate.git",
  "license": "MIT",
  "author": "Nathan Green <hello@nathgreen.co.uk>",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon ./server/server.js",
    "lint": "run-s 'lint:js'",
    "lint:eslint": "eslint --config ./.eslintrc --ext .js",
    "lint:js": "yarn run lint:eslint ./src/* ; exit 0",
    "start": "NODE_ENV=productuion node ./server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.6",
    "save": "^2.3.3"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-last": "0.0.5",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js",
      "git add"
    ]
  }
}
